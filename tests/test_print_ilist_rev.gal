ilist irev(ilist l1){
    
    int len_l1;
    len_l1 = ilength(l1);
    ilist temp_l1; 
    temp_l1 = [];
    int temp_element;
    
    while(!(len_l1 ==0)){

        /*adds the first element of the list l1 to temp_l1*/
        temp_element = ipeek(l1);
        temp_l1 = iadd(temp_element,temp_l1);

        /*advances the head of the list*/
        l1 = inext(l1);

        len_l1 = len_l1 - 1; 

    }
    return temp_l1;
}

int print_ilist(ilist l1){
    int len;
    len = ilength(l1);
    ilist tmp;
    tmp = l1;
    int i;
    i = 0;
    print_str("->");
    while (i < len) {
          print_int(ipeek(tmp));
          print_str("::");
          tmp = inext(tmp);
          i = i + 1;
    }
    print_endline();

    return 1;
}

